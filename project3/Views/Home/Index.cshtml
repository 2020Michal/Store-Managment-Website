<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
@Styles.Render("~/Content/styles.css")
<script>
    // Direct to search icecream page
    function navToSearchIcePage() {
        window.location.href = `/IceCream/SearchIceCreamPage`;
    }

</script>


<!--carousel pictures-->
<div class="container">
    <div class="row">
        <h3 class="font_9" style="text-align:center; line-height:1.875em;">
            <span>Michal's Ice Cream Website</span> <br />
            <span style="font-size: large; color:hotpink">"Life is better with Ice Cream"</span>
        </h3>

        <a class='btn btn-info btn-xs' onclick="navToSearchIcePage()" href="#">
            Search Ice Cream <i class="fa fa-search"></i>
        </a>
        <br />
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://sifu.unileversolutions.com/image/en-ZA/recipe-topvisual/2/1260-709/creamy-rooibos-ice-cream-50461859.jpg"
                         alt="IceCream" style="width:60%;
                   margin-left:auto; margin-right:auto">
                </div>

                <div class="item">
                    <img src="//www.biggerbolderbaking.com/wp-content/uploads/2018/05/1C5A7434-1024x682.jpg" alt="IceCream"
                         style="width:60%;
                   margin-left:auto; margin-right:auto"> >
                </div>
                <div class="item">
                    <img src="https://www.thedenizen.co.nz/wp-content/uploads/2017/12/Icecream.jpg" alt="IceCream" style="width:60%;
                   margin-left:auto; margin-right:auto">>
                </div>

            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
@{
    ViewBag.Title = "Home Page";
}
<style>

    body {
        background-image: url('https://i.pinimg.com/564x/c8/08/aa/c808aa8f2adbe34300198bc8b6b779ff.jpg');
    }
</style>
